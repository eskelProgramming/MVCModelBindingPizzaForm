@model Pizza
@{
    ViewData["Title"] = "Pizza";
}

<h2>Order Pizza</h2>

<form method="post">
    <div class="col-md-6">
        <div class="form-group">
            <label class="control-label" asp-for="Topping"></label>
            <input class="form-control" asp-for="Topping" />
            <span class="text-danger" asp-validation-for="Topping"></span>
        </div>

        <div class="form-group">
            <label class="control-label" asp-for="Size"></label>
            <input class="form-control" asp-for="Size" />
            <span class="text-danger" asp-validation-for="Size"></span>
        </div>

        <div class="form-group">
            <label class="control-label" asp-for="Quantity"></label>
            <input class="form-control" asp-for="Quantity" />
            <span class="text-danger" asp-validation-for="Quantity"></span>
        </div>

        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Order Pizza"/>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}